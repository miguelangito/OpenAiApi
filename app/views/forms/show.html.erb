<div class="container mx-auto p-4">

  <% if notice.present? %>
    <p class="text-green-500 mb-4"><%= notice %></p>
  <% end %>

  <%= render @form %>

  <div class="mt-6">
    <%= link_to "Edit this form", edit_form_path(@form), class: "text-blue-500 hover:underline mr-4" %> |
    <%= link_to "Back to forms", forms_path, class: "text-blue-500 hover:underline mr-4" %>

    <%= button_to "Destroy this form", @form, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "bg-red-500 hover:bg-red-700 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>

</div>