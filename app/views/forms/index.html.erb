<% content_for :title, "Forms" %>

<div class="container mx-auto p-4"> 

  <h1 class="text-3xl font-bold mb-4">Forms</h1>

  <% if notice.present? %>
    <p class="text-green-500 mb-4"><%= notice %></p> 
  <% end %>

  <div id="forms" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"> 
    <% @forms.each do |form| %>
      <div class="bg-white shadow-md rounded-md p-4"> 
        <%= render form %>
        <p class="mt-4">
          <%= link_to "Show this form", form, class: "text-blue-500 hover:underline" %> 
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to "New form", new_form_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %> 

</div>

